
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel panel-primary" style="margin-top: 10px">
    <div class="panel-heading">
        <div class="row">
            <div class="col-sm-5" style="width:52%">
                <div class="form-group">
                    <label for="cp3" class="control-label col-sm-4" style="width:140px;padding-top:5px">расслыка</label>
                    <div class="col-lg-4" style="width: 180px">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="icon-calendar"></i></span>
                            <input name="reservation" class="form-control" id="reservation" type="text" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-5" style="width: 180px;float:right">

                <button class="btn btn-default btn-sm" data-toggle="modal" data-target="#newRegTask" style="float: right; margin-top: 2px">Новая рассылка</button>

            </div>
        </div>

    </div>
    <div class="panel-body">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <colgroup>
                    <col style="width: 50px" />
                    <col />
                    <col />
                    <col />
                    <col />
                    <col />
                    <col style="width: 50px" />
                </colgroup>
                <thead>
                    <tr>
                        <th></th>
                        <th>Имя</th>
                        <th>Email</th>
                        <th>Статус</th>
                        <th>Время</th>
                        <th>Тема</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            <a href="#" class="btn btn-primary btn-line"><i class="icon-edit"></i></a>
                        </td>
                        <td>
                            <h4 class="icon-share">Андрей Михайлович</h4>
                        </td>
                        <td><em>info@mdo.com</em></td>
                        <td>Отправлено</td>
                        <td>01/01/2015 13:00</td>
                        <td>Профилактика</td>
                        <td>
                            <a href="#" class="btn btn-danger btn-line"><i class="icon-remove"></i></a>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <a href="#" class="btn btn-primary btn-line"><i class="icon-edit"></i></a>
                        </td>
                        <td>
                            <h4 class="icon-share">Андрей Михайлович</h4>
                        </td>
                        <td><em>info@mdo.com</em></td>
                        <td>В Очереди</td>
                        <td>01/01/2015</td>
                        <td>Профилактика</td>
                        <td>
                            <a href="#" class="btn btn-danger btn-line"><i class="icon-remove"></i></a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
<div class="modal fade" id="newRegTask" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="H2">Добавить в рассылки</h4>
            </div>
            <div class="modal-body">
                <div class="box">
                    <div class="body collapse in">
                        <div class="tab" data-tab-name="PatientForm" data-tab-target="PatientTabs">
                            <div class="row">
                                <div class="col-lg-6" style="width: 53%">
                                    <div class="form-group">
                                        <label>E-mail</label>
                                        <input style="width: auto" type="text" class="form-control" />
                                    </div>
                                </div>

                                <div class="col-lg-6" style="width: 33%; margin-left: 20px;">
                                    <div class="form-group">
                                        <label>Статус</label>
                                        <br />
                                        <select class="form-control" disabled>
                                            <option>Выбрать</option>
                                            <option>Выполнено</option>
                                            <option>Не выполнено</option>
                                        </select>
                                        <p class="help-block"></p>
                                    </div>
                                </div>
                            </div>
                            <div class="row">

                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <label>Тема рассылки.</label>
                                        <textarea class="form-control" rows="3"></textarea>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <label>Текст рассылки.</label>
                                        <textarea class="form-control" rows="3"></textarea>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label>Дата</label>
                                        <input type="text" class="form-control" value="16/02/12" data-date-format="dd/mm/yy" id="dp2" />
                                    </div>
                                </div>
                                <div class="col-sm-8">
                                    <div class="form-group">
                                        <label class="control-label">Время</label>
                                        <div class="input-group bootstrap-timepicker">
                                            <input class="form-control timepicker-empty" type="text" />
                                            <span class="input-group-addon add-on"><i class="icon-time"></i></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
         <div class="box">
                <div class="body collapse in">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Отменить</button>
                <button type="button" class="btn btn-primary">Сохранить</button>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $('.timepicker-empty').timepicker({ 'defaultTime': false });
</script>
