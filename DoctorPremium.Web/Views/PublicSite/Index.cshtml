<!-- about section -->
<section class="about text-center" id="about">
    <div class="container">
        <div class="row">
            <h2 style="font-size: 50px;margin-top: 10%;">@Resources.PublicS.AboutDoctor</h2>
            <div class="form-group" style="width: 100%">
                <div class="fileupload-new thumbnail" style="width: 15%; float: left;">
                    @if (!String.IsNullOrEmpty(Model.UserInfoPhoto))
                    {
                        <img src=@String.Concat("/Photos/", Model.UserInfoPhoto) alt="" />
                    }
                    else
                    {
                        <img src="" alt="" />@*@Url.Content("/Content/assets/css/../img/ demoUpload.jpg")*@
					}
                </div>
                <h4 style="float: right; width: 80%; text-align: left">@Html.DisplayFor(model => model.AboutOfDoctor)</h4>
            </div>
        </div>
    </div>
</section><!-- end of about section -->
<!-- service section starts here -->
<!-- team section -->
<section class="team" id="team">
    <div class="container">
        <div class="row">
            <div class="team-heading text-center">
                <h2 style="font-size: 50px;margin-top: 10%;">@Resources.PublicS.SERVICES</h2>
                <h4>@Html.Raw(Server.HtmlDecode(Model.DoctorService))</h4>
            </div>



        </div>
    </div>
</section><!-- end of team section -->

<section class="team" id="contact">
    <div class="container">
        <div class="row">
            <div class="team-heading text-center">
                <div class="contact-caption clearfix" style="margin-top: 10px;">
                    <div class="contact-heading text-center">
                        <h2 style="font-size: 50px;">@Resources.PublicS.contact</h2>
                    </div>
                    <div class="col-md-5 contact-info text-left">
                        <h3>@Resources.PublicS.ContactI</h3>
                        <div class="info-detail">
                            <ul><li><i class="fa fa-map-marker"></i><span>@Resources.PublicS.Address  </span>@Html.DisplayFor(model => model.PublicAddressForPatients)</li></ul>
                            <ul><li><i class="fa fa-phone"></i><span>@Resources.PublicS.Phone  </span>@Html.DisplayFor(model => model.PublicPhone)</li></ul>
                            <ul><li><i class="fa fa-envelope"></i><span>@Resources.PublicS.Email  </span> @Html.DisplayFor(model => model.PublicEmailAddress)</li></ul>

                        </div>

                    </div>
                    <div class="col-md-6 col-md-offset-1 contact-form">
                        <h3>@Resources.PublicS.Advertising</h3>

                        <div class="form-group">
                            <div class="wow fadeInDown" data-wow-delay="0.1s" style="float: left;">
                                <div class="section-heading text-center">
                                    <p style="font-size: 28px;color: white;text-align: left">
                                        <script src="//yastatic.net/es5-shims/0.0.2/es5-shims.min.js"></script>
                                        <script src="//yastatic.net/share2/share.js"></script>
                                        <div class="ya-share2" data-description="My website" data-services="vkontakte,facebook,odnoklassniki,viber,whatsapp,skypecollections,linkedin,moimir,gplus,twitter,blogger,digg,lj,surfingbird,telegram"></div>
                                    </p>
                                </div>
                            </div>
                            <div class="divider-short"></div>
                        </div>
                    </div>

                </div>
            </div>



        </div>
    </div>
</section><!-- end of team section -->


