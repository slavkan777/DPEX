@using DoctorPremium.Web.Helpers
<!DOCTYPE html>
<html lang=@LanguageHelper.GetCurrentLanguage()>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="@Resources.PublicS.SharedMas">
    <meta name="author" content="">
    <meta name="keywords" content="@Resources.Resource.Keywords" />
    <title>@Resources.PublicS.SharedMas</title>
    @Styles.Render("~/Content/PublicCSS")
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:600italic,400,800,700,300' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=BenchNine:300,400,700' rel='stylesheet' type='text/css'>
    @RenderSection("header", required: false)

    <script src="~/Content/PublicPage/js/modernizr.js"></script>
    <!--[if lt IE 9]>
      <script src="js/html5shiv.js"></script>
      <script src="js/respond.min.js"></script>
    <![endif]-->
</head>
<body>

    <!-- ====================================================
    header section -->
    <header class="top-header">
        <div class="container">
            <div class="row">
                <div class="col-xs-5 header-logo">
                    <br>
                    <a class="navbar-brand hidden-xs" href="/Home/index" style=" padding 1px 1px; ">
                        <img src="~/Content/LandigPage/img/logoPublic.png" alt="" width="180" height="35" />
                    </a>
                </div>
                <div class="col-md-7">
                    <nav class="navbar navbar-default">
                        <div class="container-fluid nav-bar">
                            <!-- Brand and toggle get grouped for better mobile display -->
                            <div class="navbar-header">
                                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                                    <span class="sr-only">Toggle navigation</span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                </button>
                            </div>
                            <!-- Collect the nav links, forms, and other content for toggling -->
                            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

                                <ul class="nav navbar-nav navbar-right">
                                    <li><a class="menu active" href="#home">@Resources.PublicS.home</a></li>
                                    <li><a class="menu" href="#about">@Resources.PublicS.abouts</a></li>
                                    @*<li><a class="menu" href="#service">our services </a></li>*@
                                    <li><a class="menu" href="#team">@Resources.PublicS.service</a></li>
                                    <li><a class="menu" href="#contact"> @Resources.PublicS.contact</a></li>
                                </ul>
                            </div><!-- /navbar-collapse -->
                        </div><!-- / .container-fluid -->
                    </nav>
                </div>
            </div>
        </div>
    </header> <!-- end of header area -->
    @RenderBody()
    <!-- footer starts here -->
    <footer class="footer clearfix" style="height: 5%">
        <div class="container">
            <div class="row">
                <div class="col-xs-6 footer-para">
                    <p>&copy;doctor-premium.com</p>
                </div>
                @*<div class="col-xs-6 text-right">
                        <a href=""><i class="fa fa-facebook"></i></a>
                        <a href=""><i class="fa fa-twitter"></i></a>
                        <a href=""><i class="fa fa-skype"></i></a>
                    </div>*@
            </div>
        </div>
    </footer>
    @Scripts.Render("~/bundles/PublicJS")
    <!-- script tags
    ============================================================= -->

</body>
</html>